# -*- sh -*-
@LSST UPS@ &&
curl -L \
    http://dev.lsstcorp.org/pkgs/std/w12/external/mysqlclient/@VERSION@/mysql-@VERSION@.tar.gz \
> @PRODUCT@-@VERSION@.tar.gz &&
gunzip < @PRODUCT@-@VERSION@.tar.gz | tar -xf - &&
cd mysql-@VERSION@ &&
product_dir=$(eups path 0)/$(eups flavor)/@PRODUCT@/@VERSION@ &&
./configure --prefix=$product_dir --without-server --enable-thread-safe-client &&
make &&
make install &&
(cd $product_dir/lib && ln -fs mysql/* . ) &&
lsst_ups @PRODUCT@ @VERSION@ $product_dir
